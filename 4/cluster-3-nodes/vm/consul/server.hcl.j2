datacenter          = "myhome"
node_name           = "{{ node_name }}"
data_dir            = "/opt/consul"
bootstrap_expect    = {{ bootstrap_expect }}
rejoin_after_leave  = true
enable_script_checks= true

encrypt             = "{{ encrypt }}"

domain              = "consul"
log_level           = "INFO"
server              = true
client_addr         = "0.0.0.0"
bind_addr           = "{{'{{'}} GetInterfaceIP \"eth1\" {{'}}'}}"

ports {
  grpc              = 8502
  dns               = 8600
}

connect {
  enabled           = true
}

ui_config {
  enabled           = true
}

dns_config {
  allow_stale       = true
  max_stale         = "87600h"
  enable_truncate   = true
  only_passing      = true
}

start_join          = [
  "192.168.56.30",
  "192.168.56.31",
  "192.168.56.32"
]

